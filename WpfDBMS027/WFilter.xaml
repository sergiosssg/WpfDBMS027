<Window x:Class="WpfDBMS027.WFilter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDBMS027"
        mc:Ignorable="d"
        Title="WFilter" Height="180" Width="360">

    <StackPanel Orientation="Vertical">
        <Separator Width="7"/>
        <StackPanel Orientation="Horizontal">
            <Separator /><Label Content="ID :"/><Separator /><TextBox x:Name="txtfld_ID_from_filter"/>
        </StackPanel>
        <Separator Width="4"/>
        <StackPanel Orientation="Horizontal">
            <Separator /><Label Content="Код :" /><Separator /><TextBox x:Name="txtfld_KOD_from_filter"/>
        </StackPanel>
        <Separator Width="4"/>
        <StackPanel Orientation="Horizontal">
            <Separator /><Label Content="Name :" /><Separator /><TextBox x:Name="txtfld_Name_from_filter"/>
        </StackPanel>
        <Separator Width="4"/>
        <StackPanel Orientation="Horizontal">
            <Separator Width="8"/><Button x:Name="btn_Ok_from_filer" Content="Установить ..." ToolTip="Установить фильтр"/><Separator Width="8"/>
        </StackPanel>
        <Separator Width="7"/>
    </StackPanel>
</Window>
