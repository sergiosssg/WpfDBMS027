<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDBMS027"
      xmlns:shared="http://schemas.actiprosoftware.com/winfx/xaml/shared" xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" x:Class="WpfDBMS027.PageSimpleNewGridControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSimpleNewGridControl" Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="360*" MinWidth="300"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="280*" MinHeight="220"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <c1:C1ScrollViewer Grid.Column="1"  Grid.Row="2" Margin="3,3,3,3"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <c1:C1DataGrid x:Name="c1datagrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                
            </c1:C1DataGrid>

        </c1:C1ScrollViewer>

    </Grid>
</Page>
